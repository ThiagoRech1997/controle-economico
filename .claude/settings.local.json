{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "description": "Claude Code configuration for controle-economico project",
  "project": {
    "name": "Controle Econ√¥mico",
    "description": "Personal financial control system with Clean Architecture (NestJS) and Feature-Sliced Design (Next.js)",
    "version": "1.0.0",
    "architecture": {
      "backend": "Clean Architecture (Hexagonal)",
      "frontend": "Feature-Sliced Design"
    }
  },
  "commands": {
    "enabled": true,
    "directory": "commands",
    "autoLoad": true
  },
  "hooks": {
    "enabled": true,
    "file": "hooks.json",
    "logLevel": "info"
  },
  "documentation": {
    "readme": "README.md",
    "patterns": "patterns.md",
    "quickReference": "QUICK-REFERENCE.md",
    "examples": "EXAMPLES.md",
    "troubleshooting": "TROUBLESHOOTING.md",
    "security": "SECURITY.md"
  },
  "mcp": {
    "enabled": true,
    "configFile": "../.mcp.json",
    "servers": {
      "github": {
        "enabled": false,
        "note": "Set GITHUB_TOKEN in .mcp.json to enable"
      },
      "filesystem": {
        "enabled": true
      }
    }
  },
  "codeGeneration": {
    "backend": {
      "usePathAliases": true,
      "pathAlias": "@/",
      "addJsDoc": true,
      "addTests": true,
      "testFramework": "jest"
    },
    "frontend": {
      "usePathAliases": true,
      "pathAlias": "@/",
      "componentStyle": "functional",
      "addTests": true,
      "testFramework": "react-testing-library"
    }
  },
  "validation": {
    "preCommit": {
      "enabled": true,
      "runLint": true,
      "runTests": true,
      "runTypeCheck": true,
      "checkArchitecture": true
    },
    "prePush": {
      "enabled": true,
      "runFullTests": true,
      "checkCoverage": true,
      "minCoverage": 80
    }
  },
  "_custom": {
    "note": "Custom fields for future implementation - not used by Claude Code",
    "skills": {
      "directory": "skills",
      "status": "planned",
      "planned": [
        "create-use-case",
        "create-feature-module",
        "validate-architecture",
        "pre-commit-check",
        "database-migration"
      ]
    },
    "agents": {
      "directory": "agents",
      "status": "planned",
      "planned": [
        "code-reviewer",
        "test-generator",
        "architecture-validator",
        "migration-assistant",
        "performance-optimizer"
      ],
      "config": {
        "code-reviewer": {
          "enabled": false,
          "strictness": "high",
          "checkTests": true,
          "checkDocs": true,
          "checkArchitecture": true,
          "minCoverage": 80
        },
        "test-generator": {
          "enabled": false,
          "coverageThreshold": 80,
          "generateMocks": true,
          "testFramework": "jest"
        }
      }
    },
    "workflows": {
      "directory": "workflows",
      "status": "planned",
      "planned": [
        "full-feature-workflow",
        "database-change-workflow",
        "refactoring-workflow",
        "pr-preparation-workflow",
        "onboarding-workflow"
      ],
      "config": {
        "full-feature-workflow": {
          "enabled": false,
          "autoValidation": true,
          "stopOnError": true,
          "createTests": true,
          "createDocs": true,
          "autoCommit": false
        }
      }
    },
    "projectSpecific": {
      "backend": {
        "port": 3001,
        "apiPrefix": "/api/v1",
        "database": "sqlserver"
      },
      "frontend": {
        "port": 3000,
        "uiFramework": "shadcn-ui",
        "stateManagement": {
          "server": "react-query",
          "global": "zustand"
        }
      }
    }
  },
  "_meta": {
    "version": "1.0.0",
    "created": "2025-11-20",
    "lastUpdated": "2025-11-20",
    "author": "Claude Code",
    "documentation": "See README.md for complete documentation"
  },
  "permissions": {
    "allow": [
      "Bash(test:*)"
    ],
    "deny": [],
    "ask": []
  }
}
